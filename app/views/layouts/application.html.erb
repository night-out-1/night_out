<!DOCTYPE html>
<html>
  <head>
    <title>NightOut</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
  </head>

  <body>

<!-- navigation bar -->
  <nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" href="/">NightOut<span class="glyphicon glyphicon-glass"></span></a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown"><a href="/">Home</a></li>
        <li><a href="/users/sign_up">Sign Up</a></li>
        <li><a href="/users/sign_in">Sign In</a></li>
        <% if current_user %>
        <li><%= link_to("/profiles/#{current_user.id}", :method => :get) do %>
            Profile
            <% end %></li>
        <li><a href="/events">Events</a></li>
        <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<!-- content -->
<%= yield %>



<!-- footer -->
  <footer class="container-fluid bg-4 text-center navbar-fixed-bottom">
  <p>footer</p> 
</footer>
  </body>
</html>
